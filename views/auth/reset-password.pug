extends ../layout/index

block content
    div 
        div(class="max-w-sm mx-auto mt-24 p-5 space-y-5")
            h1(class="text-2xl font-semibold") Reset Password
            p(class=" text-sm") Please enter your new account password
            if errors
                div(class="max-w-md mx-auto my-5")
                    each error in errors 
                        p(class="bg-red-400 rounded-md text-white text-xs text-center p-2 mb-2 font-semibold")=error.msg
            form(class="space-y-5 text-sm")
                input(type="hidden" name="_csrf" value=csrfToken)
                div(class="relative flex flex-col space-y-3")
                    label(class="block" for="email") Password
                    input(id="password" name="password" type="password" placeholder="Enter your password" class="py-2 px-3 rounded-md border-2 border-gray-100 text-gray-600")
                    <svg class="absolute right-3 top-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(0,0,0,0.52)"><path d="M19 10H20C20.5523 10 21 10.4477 21 11V21C21 21.5523 20.5523 22 20 22H4C3.44772 22 3 21.5523 3 21V11C3 10.4477 3.44772 10 4 10H5V9C5 5.13401 8.13401 2 12 2C15.866 2 19 5.13401 19 9V10ZM5 12V20H19V12H5ZM11 14H13V18H11V14ZM17 10V9C17 6.23858 14.7614 4 12 4C9.23858 4 7 6.23858 7 9V10H17Z"></path></svg>
                div(class="relative flex flex-col space-y-3")
                    label(class="block" for="password_repeat") Repeat your password 
                    input(id="password_repeat" name="password_repeat" type="password" placeholder="Repeat your password" class="py-2 px-3 rounded-md border-2 border-gray-100 text-gray-600")
                    <svg class="absolute right-3 top-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(0,0,0,0.52)"><path d="M19 10H20C20.5523 10 21 10.4477 21 11V21C21 21.5523 20.5523 22 20 22H4C3.44772 22 3 21.5523 3 21V11C3 10.4477 3.44772 10 4 10H5V9C5 5.13401 8.13401 2 12 2C15.866 2 19 5.13401 19 9V10ZM5 12V20H19V12H5ZM11 14H13V18H11V14ZM17 10V9C17 6.23858 14.7614 4 12 4C9.23858 4 7 6.23858 7 9V10H17Z"></path></svg>
                input(class="w-full bg-yellow-300 hover:bg-yellow-400 font-semibold py-2 cursor-pointer rounded-md" type="submit" value="Reset Password")
