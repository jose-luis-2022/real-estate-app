extends ../layout/index

block content
    div 
        div(class="max-w-sm mx-auto mt-5 p-5 space-y-5")
            h1(class="text-2xl font-semibold") Sign up
            p(class="text-sm") Enter your information to create your account
            if errors
                div(class="max-w-md mx-auto my-5")
                    each error in errors 
                        p(class="bg-red-400 rounded-md text-white text-xs text-center p-2 mb-2 font-semibold")=error.msg
            form(class="space-y-3 text-sm" noValidate)
                input(type="hidden" name="_csrf" value=csrfToken)
                div(class="relative flex flex-col space-y-2")
                    label(class=" block" for="fullname") Full Name
                    input(id="fullname" name="fullname" type="text" class="py-2 px-3 rounded-md border-2 border-gray-100 text-gray-600" value= currentData ? currentData.fullname : "")
                    <svg class="absolute right-3 top-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(0,0,0,0.58)"><path d="M11.9999 17C15.6623 17 18.8649 18.5751 20.607 20.9247L18.765 21.796C17.3473 20.1157 14.8473 19 11.9999 19C9.15248 19 6.65252 20.1157 5.23479 21.796L3.39355 20.9238C5.13576 18.5747 8.33796 17 11.9999 17ZM11.9999 2C14.7613 2 16.9999 4.23858 16.9999 7V10C16.9999 12.6888 14.8776 14.8818 12.2168 14.9954L11.9999 15C9.23847 15 6.9999 12.7614 6.9999 10V7C6.9999 4.31125 9.1222 2.11818 11.783 2.00462L11.9999 2ZM11.9999 4C10.4022 4 9.09623 5.24892 9.00499 6.82373L8.9999 7V10C8.9999 11.6569 10.343 13 11.9999 13C13.5976 13 14.9036 11.7511 14.9948 10.1763L14.9999 10V7C14.9999 5.34315 13.6567 4 11.9999 4Z"></path></svg>
                div(class="relative flex flex-col space-y-2")   
                    label(class="block" for="email") Email
                    input(id="email" name="email" type="email" class=`py-2 px-3 rounded-md border-2 ${ userRegistered ? "border-red-400" : " border-gray-100" } text-gray-600` value= currentData ? currentData.email : "")
                    <svg class="absolute right-3 top-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(0,0,0,0.59)"><path d="M3 3H21C21.5523 3 22 3.44772 22 4V20C22 20.5523 21.5523 21 21 21H3C2.44772 21 2 20.5523 2 20V4C2 3.44772 2.44772 3 3 3ZM20 7.23792L12.0718 14.338L4 7.21594V19H20V7.23792ZM4.51146 5L12.0619 11.662L19.501 5H4.51146Z"></path></svg>
                div(class="relative flex flex-col space-y-2")
                    label(class=" block" for="phone_number") Phone number
                    input(id="phone_number" name="phone_number" type="text" class="py-2 px-3 rounded-md border-2 border-gray-100 text-gray-600" value= currentData ? currentData.phone : "")
                    <svg class="absolute right-3 top-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(0,0,0,0.61)"><path d="M9.36556 10.6821C10.302 12.3288 11.6712 13.698 13.3179 14.6344L14.2024 13.3961C14.4965 12.9845 15.0516 12.8573 15.4956 13.0998C16.9024 13.8683 18.4571 14.3353 20.0789 14.4637C20.599 14.5049 21 14.9389 21 15.4606V19.9234C21 20.4361 20.6122 20.8657 20.1022 20.9181C19.5723 20.9726 19.0377 21 18.5 21C9.93959 21 3 14.0604 3 5.5C3 4.96227 3.02742 4.42771 3.08189 3.89776C3.1343 3.38775 3.56394 3 4.07665 3H8.53942C9.0611 3 9.49513 3.40104 9.5363 3.92109C9.66467 5.54288 10.1317 7.09764 10.9002 8.50444C11.1427 8.9484 11.0155 9.50354 10.6039 9.79757L9.36556 10.6821ZM6.84425 10.0252L8.7442 8.66809C8.20547 7.50514 7.83628 6.27183 7.64727 5H5.00907C5.00303 5.16632 5 5.333 5 5.5C5 12.9558 11.0442 19 18.5 19C18.667 19 18.8337 18.997 19 18.9909V16.3527C17.7282 16.1637 16.4949 15.7945 15.3319 15.2558L13.9748 17.1558C13.4258 16.9425 12.8956 16.6915 12.3874 16.4061L12.3293 16.373C10.3697 15.2587 8.74134 13.6303 7.627 11.6707L7.59394 11.6126C7.30849 11.1044 7.05754 10.5742 6.84425 10.0252Z"></path></svg>
                div(class="relative flex flex-col space-y-2")
                    label(class="block" for="password") Password 
                    input(id="password" name="password" type="password" class="py-2 px-3 rounded-md border-2 border-gray-100 text-gray-600")
                    <svg class="absolute right-3 top-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(0,0,0,0.52)"><path d="M19 10H20C20.5523 10 21 10.4477 21 11V21C21 21.5523 20.5523 22 20 22H4C3.44772 22 3 21.5523 3 21V11C3 10.4477 3.44772 10 4 10H5V9C5 5.13401 8.13401 2 12 2C15.866 2 19 5.13401 19 9V10ZM5 12V20H19V12H5ZM11 14H13V18H11V14ZM17 10V9C17 6.23858 14.7614 4 12 4C9.23858 4 7 6.23858 7 9V10H17Z"></path></svg>
                div(class="relative flex flex-col space-y-2")
                    label(class="block" for="password_repeat") Repeat your password
                    input(id="password_repeat" name="password_repeat" type="password" class="py-2 px-3 rounded-md border-2 border-gray-100 text-gray-600")
                    <svg class="absolute right-3 top-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(0,0,0,0.52)"><path d="M19 10H20C20.5523 10 21 10.4477 21 11V21C21 21.5523 20.5523 22 20 22H4C3.44772 22 3 21.5523 3 21V11C3 10.4477 3.44772 10 4 10H5V9C5 5.13401 8.13401 2 12 2C15.866 2 19 5.13401 19 9V10ZM5 12V20H19V12H5ZM11 14H13V18H11V14ZM17 10V9C17 6.23858 14.7614 4 12 4C9.23858 4 7 6.23858 7 9V10H17Z"></path></svg>
                input(class="w-full bg-yellow-300 hover:bg-yellow-400 font-semibold py-2 cursor-pointer rounded-md" type="submit" value="Sign up")
            div(class="flex items-center justify-center")
                p(class="text-sm") Already have an account? 
                    a(href="/auth/sign-in" class="font-semibold") Sign in
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" fill="rgba(0,0,0,0.8)"><path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z"></path></svg>