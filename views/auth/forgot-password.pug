extends ../layout/index

block content
    div 
        div(class="max-w-sm mx-auto mt-24 p-5 space-y-5")
            h1(class="text-2xl font-semibold") Forgot Password
            p(class=" text-sm") Please enter your account email
            if errors
                div(class="max-w-md mx-auto my-5")
                    each error in errors 
                        p(class="bg-red-400 rounded-md text-white text-xs text-center p-2 mb-2 font-semibold")=error.msg
            form(class="space-y-5 text-sm" method="POST" action="/auth/forgot-password")
                input(type="hidden" name="_csrf" value=csrfToken)
                div(class="relative flex flex-col space-y-3")
                    label(class="block" for="email") Email
                    input(id="email" name="email" type="email" class="py-2 px-3 rounded-md border-2 border-gray-100 text-gray-600")
                    <svg class="absolute right-3 top-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(0,0,0,0.59)"><path d="M3 3H21C21.5523 3 22 3.44772 22 4V20C22 20.5523 21.5523 21 21 21H3C2.44772 21 2 20.5523 2 20V4C2 3.44772 2.44772 3 3 3ZM20 7.23792L12.0718 14.338L4 7.21594V19H20V7.23792ZM4.51146 5L12.0619 11.662L19.501 5H4.51146Z"></path></svg>
                input(class="w-full bg-yellow-300 hover:bg-yellow-400 font-semibold py-2 cursor-pointer rounded-md" type="submit" value="Send Instructions")
            div(class="flex items-center justify-center")
                p(class="text-sm") Already you have an account? 
                    a(href="/auth/sign-in" class="font-semibold") Sign in
            div(class="flex items-center justify-center")
                p(class="text-sm") Not registered yet? 
                    a(href="/auth/sign-up" class="font-semibold") Create an account