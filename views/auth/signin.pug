extends ../layout/index

block content
    div 
        div(class="max-w-sm mx-auto mt-24 p-5 space-y-5")
            h1(class="text-2xl font-semibold") Sign in
            div(class="flex items-center") 
                p Hi, Welcome back to  
                    span(class="font-semibold") Real Estates
                img(class="w-8 h-8" src="/img/building-icon.png" alt="building icon")
            if errors
                div(class="max-w-md mx-auto my-5")
                    each error in errors 
                        p(class="bg-red-400 rounded-md text-white text-xs text-center p-2 mb-2 font-semibold")=error.msg
            form(class="space-y-5 text-sm" method="POST" action="/auth/sign-in")
                input(type="hidden" name="_csrf" value=csrfToken)
                div(class="relative flex flex-col space-y-3")
                    label(class="block" for="email") Email
                    input(id="email" name="email" type="email" placeholder="E.g. example@email.com" class="py-2 px-3 rounded-md border-2 border-gray-100 text-gray-600")
                    <svg class="absolute right-3 top-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(0,0,0,0.58)"><path d="M11.9999 17C15.6623 17 18.8649 18.5751 20.607 20.9247L18.765 21.796C17.3473 20.1157 14.8473 19 11.9999 19C9.15248 19 6.65252 20.1157 5.23479 21.796L3.39355 20.9238C5.13576 18.5747 8.33796 17 11.9999 17ZM11.9999 2C14.7613 2 16.9999 4.23858 16.9999 7V10C16.9999 12.6888 14.8776 14.8818 12.2168 14.9954L11.9999 15C9.23847 15 6.9999 12.7614 6.9999 10V7C6.9999 4.31125 9.1222 2.11818 11.783 2.00462L11.9999 2ZM11.9999 4C10.4022 4 9.09623 5.24892 9.00499 6.82373L8.9999 7V10C8.9999 11.6569 10.343 13 11.9999 13C13.5976 13 14.9036 11.7511 14.9948 10.1763L14.9999 10V7C14.9999 5.34315 13.6567 4 11.9999 4Z"></path></svg>
                div(class="relative flex flex-col space-y-3")
                    label(class="block" for="password") Password 
                    input(id="password" name="password" type="password" placeholder="Enter your password" class="py-2 px-3 rounded-md border-2 border-gray-100 text-gray-600")
                    <svg class="absolute right-3 top-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(0,0,0,0.52)"><path d="M19 10H20C20.5523 10 21 10.4477 21 11V21C21 21.5523 20.5523 22 20 22H4C3.44772 22 3 21.5523 3 21V11C3 10.4477 3.44772 10 4 10H5V9C5 5.13401 8.13401 2 12 2C15.866 2 19 5.13401 19 9V10ZM5 12V20H19V12H5ZM11 14H13V18H11V14ZM17 10V9C17 6.23858 14.7614 4 12 4C9.23858 4 7 6.23858 7 9V10H17Z"></path></svg>
                div 
                    a(href="/auth/forgot-password" class="text-gray-600 text-xs font-semibold") Forgot your password?
                input(class="w-full bg-yellow-300 hover:bg-yellow-400 font-semibold py-2 cursor-pointer rounded-md" type="submit" value="Sign in")
            div(class="flex items-center justify-center")
                p(class="text-sm") Not registered yet? 
                    a(href="/auth/sign-up" class="font-semibold") Create an account
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" fill="rgba(0,0,0,0.8)"><path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z"></path></svg>