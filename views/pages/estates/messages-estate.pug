extends ../../layout/user-pages

block header-pages 
    include ../../includes/header-pages-user


block content 
    div(class="flex")
        a(href="/page/my-estates" class="bg-gray-500 ml-10 md:ml-5 lg:ml-10 rounded-md px-3 py-1 flex items-center gap-2 shadow hover:scale-[102%] duration-700")
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(255,255,255,1)"><path d="M12 2C17.52 2 22 6.48 22 12C22 17.52 17.52 22 12 22C6.48 22 2 17.52 2 12C2 6.48 6.48 2 12 2ZM12 11V8L8 12L12 16V13H16V11H12Z"></path></svg>
            p.text-xs.uppercase.text-white.tracking-wider.font-bold Return
    
    h2(class="text-2xl font-bold text-center my-10")=page

    div(class="font-nunito mx-auto w-11/12 max-w-3xl p-5 bg-white shadow")
        if messages.length
            ul
                each message in messages
                    li(class="border-b border-gray-300 p-5")
                        p(class="font-bold text-gray-700") Name: 
                            span(class="font-normal capitalize")= message.userName

                        p(class="font-bold text-gray-700") Email: 
                            span(class="font-normal")= message.userEmail

                        p(class="font-bold text-gray-700") Message: 
                            span(class="font-normal")= message.message

                        p(class="font-bold text-gray-700") Sent: 
                            span(class="font-normal")= dateFormat(message.createdAt)
        else 
            p(class="text-center text-gray-500") There are not messages

block scripts 
    script(src="/js/menuMobile.js")
