extends ../../layout/user-pages

block header-pages 
    include ../../includes/header-pages-user

block content 
    div(class="mt-10")
        div(class="flex")
            a(href="/page/profile" class="bg-gray-500 ml-10 md:ml-5 lg:ml-10 rounded-md px-3 py-1 flex items-center gap-2 shadow hover:scale-[102%] duration-700")
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(255,255,255,1)"><path d="M12 2C17.52 2 22 6.48 22 12C22 17.52 17.52 22 12 22C6.48 22 2 17.52 2 12C2 6.48 6.48 2 12 2ZM12 11V8L8 12L12 16V13H16V11H12Z"></path></svg>
                p.text-xs.uppercase.text-white.tracking-wider.font-bold Return
        div(class="flex gap-2 items-center justify-center mt-12 mb-12")
            h1.text-2xl.text-black.font-bold.text-center Real
                span.font-normal Estates

        p(id="info_update_password" class="hidden delay-1000 duration-1000 w-full max-w-xs mx-auto py-1 mt-10 mb-5 bg-green-400 text-gray-50 font-semibold text-sm text-center shadow rounded-md") Password updated successfully
        
        div(class="container_info flex justify-center")
            form(class="space-y-5 w-7/12 lg:w-3/12")
                input(type="hidden" name="_csrf" value=csrfToken)
                p(id="password_info_updated" class="hidden")=updated
                if errors
                    div(class="max-w-md mx-auto my-5")
                        each error in errors 
                            p(class="bg-red-400 rounded-md text-white text-xs text-center p-2 mb-2 font-semibold")=error.msg
                div(class="space-y-5")
                    label(class="block text-sm" for="current_password") Current password: 
                    input(id="current_password" class="w-full text-sm text-gray-600 p-2 border border-gray-200 rounded-md placeholder-gray-400 font-normal" type="password" name="current_password")
                div(class="space-y-5")
                    label(class="block text-sm" for="new_password") New password: 
                    input(id="new_password" class="w-full text-sm text-gray-600 p-2 border border-gray-200 rounded-md placeholder-gray-400 font-normal" type="password" name="new_password")
                div(class="space-y-5")
                    label(class="block text-sm" for="repeat_password") New password: 
                    input(id="repeat_password" class="w-full text-sm text-gray-600 p-2 border border-gray-200 rounded-md placeholder-gray-400 font-normal" type="password" name="repeat_password")
                div(class="hover:scale-[102%] duration-700 flex items-center w-[75px] gap-2 text-sm font-[500] bg-yellow-200 px-2 py-1 rounded-md mx-auto cursor-pointer")
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" fill="currentColor"><path d="M18 21V13H6V21H4C3.44772 21 3 20.5523 3 20V4C3 3.44772 3.44772 3 4 3H17L21 7V20C21 20.5523 20.5523 21 20 21H18ZM16 21H8V15H16V21Z"></path></svg>
                    input(type="submit" class="cursor-pointer tracking-wide" value="Save")

block scripts 
    script(src="/js/updatePasswordMessage.js")
    script(src="/js/menuMobile.js")